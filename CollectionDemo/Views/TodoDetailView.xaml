<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CollectionDemo.Views.TodoDetailView"
             Title="할일 상세">
    <VerticalStackLayout Padding="10">
        <Label Text="Todo Detail" FontSize="18" FontAttributes="Bold" />
        <Label Text="{Binding TodoDetail.UserId}" Margin="0,10,0,0" />
        <Label Text="{Binding TodoDetail.Id}" Margin="0,10,0,0" />
        <Label Text="{Binding TodoDetail.Title}" Margin="0,10,0,0" />
        <Label Text="{Binding TodoDetail.Completed}" Margin="0,10,0,0" />
    </VerticalStackLayout>
</ContentPage>